<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= movie.title %>">
</div>
<div>
<label>Stream</label>
<select name="stream">
    <% streams.forEach(stream => { %>
    <% if(stream.id === movie.stream) { %>
    <option selected label="<%= stream.name %>" value="<%= stream.id %>">
        <% } else { %>
    <option label="<%= stream.name %>" value="<%= stream.id %>">
        <% } %>
        <% }) %>
</select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate"
     value="<%= movie.publishDate == null ? '' : 
     movie.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Run Time</label>
    <input type="number" name="runningTime" min='1' value="<%= movie.runningTime %>">
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label>Description</label>
    <textarea name="description">
        <%= movie.description %>
    </textarea>
</div>
